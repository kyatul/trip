<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-offset-3 ">
      <table class="table">
        <tr>
          <td><strong>State</strong></td>
          <td><%= @destination.state %></td>
        </tr>
        <tr>
          <td><strong>City</strong></td>
          <td><%= @destination.city %></td>
        </tr>
        <tr>
          <td><%= link_to "Back", destinations_path %></td>
        </tr>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
      <table class="table">
        <tr>
          <th>Location Name</th>
          <th>Location City</th>
        </tr>
        <% @locations.each do |location| %>
          <tr>
            <td> <%= location.name %> </td>
            <td> <%= location.city %></td>
          </tr>
        <% end %>
    </div>
  </div>
</div>
