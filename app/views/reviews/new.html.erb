<div class=container>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h4>Write Review</h4>
    </div>
  </div>
<%= form_for :review, url: location_reviews_path,:html => {:class => "form-horizontal center"} do |f| %>
    <%= f.hidden_field :location_id, :value => @location_id %>
    <div class="form-group">
      <%= f.label :comment,class: "col-md-4 control-label"  %>
      <div class="col-md-4">
        <%= f.text_field :comment, class: "form-control" %>
      </div>
    </div>

  <div class="form-group">
    <%= f.label :rating,class: "col-md-4 control-label"   %>
    <div class="col-md-4">
      <%= f.text_field :rating, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-4">
      <%= f.submit%>
    </div>
  </div>
<% end %>
</div>
