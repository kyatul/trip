<div class=container>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h4>Add new Destination</h4>
    </div>
  </div>
<%= form_for :destination, url: admin_destinations_path,:html => {:class => "form-horizontal center"} do |f| %>

    <div class="form-group">
      <%= f.label :state,class: "col-md-4 control-label"  %>
      <div class="col-md-4">
        <%= f.text_field :state, class: "form-control" %>
      </div>
    </div>

  <div class="form-group">
    <%= f.label :city,class: "col-md-4 control-label"   %>
    <div class="col-md-4">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-4">
      <%= f.submit%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-4">
      <%= link_to "Back", admin_destinations_path  %>
    </div>
  </div>
<% end %>
</div>
