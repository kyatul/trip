<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-6">
      <h4>Destination</h4>
    </div>
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-striped table-hover">
        <tr>
          <th>State</th>
          <th>City</th>
          <th></th>
        </tr>

        <% @destinations.each do |destination| %>
          <tr>
            <td> <%= destination.state %> </td>
            <td> <%= link_to destination.city, admin_destination_path(destination)%> </td>
            <td> <%= link_to "Delete", admin_destination_path(destination),
                     method: :delete,
                     data: {confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-4 col-md-offset-2">
      <%= link_to 'Add Destination', new_admin_destination_path , class: "btn btn-primary" %>
    </div>
  </div>
</div>
